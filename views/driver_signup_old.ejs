  <md-content layout-padding="">
		<h1 align="center">Driver Signup</h1>
  <form name="driverForm" ng-submit="addDriver()">
  
  
  
  <div layout="" layout-sm="column">
         
        <md-input-container>
          <input ng-model="driver.firstname" placeholder="First Name" ng-required="true">
        </md-input-container>
        
        <md-input-container >
          <input ng-model="driver.lastname" placeholder="Last Name" ng-required="true">
        </md-input-container>
        
  </div>


  <div layout="column" layout-lg="column">
     <md-input-container class="md-block">
     <input ng-model="driver.email" type="email" placeholder="Email" ng-required="true">
    </md-input-container> 
  </div>
     
     <div layout="column" layout-lg="column">
     <md-input-container class="md-block">
     <input ng-model="driver.phone" type="tel" placeholder="Phone" ng-required="true">
    </md-input-container> 
  </div>
     
     
     <div layout="column" layout-lg="column">
      <md-input-container class="md-block">
     <input ng-model="driver.password" type="password" placeholder="Password (At least 5 character)" ng-required="true">
     </md-input-container>
	</div>
	
	<div layout="column" layout-lg="column">
	      <md-input-container class="md-block">
        <label>Address</label>
        <input ng-model="driver.address">
      </md-input-container>
     </div>
      
      
      <div layout="column" layout-lg="column">
        <md-input-container>
          <label>City</label>
          <input ng-model="driver.city" ng-required="true">
        </md-input-container>
        </div>
        
        <div layout="column" layout-lg="column" >
        <md-input-container>
          <label>State</label>
          <md-select ng-model="driver.state">
            <md-option ng-repeat="state in states" value="{{state.abbrev}}">
              {{state.abbrev}}
            </md-option>
          </md-select>
        </md-input-container>
        </div>
        
        <div layout="column" layout-lg="column">
        <md-input-container>
          <label>Zip Code</label>
          <input name="postalCode" ng-model="driver.postalCode" placeholder="12345"
                 required ng-pattern="/^[0-9]{5}$/" md-maxlength="5">
          <div ng-messages="driverForm.postalCode.$error" role="alert" multiple>
            <div ng-message="required" class="my-message">You must supply a postal code.</div>
            <div ng-message="pattern" class="my-message">That doesn't look like a valid postal
              code.
            </div>
            <div ng-message="md-maxlength" class="my-message">
              Don't use the long version silly...we don't need to be that specific...
            </div>
          </div>
        </md-input-container>
        </div>

<div layout="column" layout-lg="column">
    <md-button type="submit" class="md-raised md-primary">Sign Up</md-button>  
</div>

  </form>
